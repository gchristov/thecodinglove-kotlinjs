{
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "source": "build/productionBackend",
    "runtime": "nodejs16"
  },
  "hosting": {
    "public": "build/productionWeb",
    "rewrites": [
      {
        "source": "/api/search",
        "function": "searchApi"
      },
      {
        "source": "/api/slack/auth",
        "function": "slackAuthApi"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 5003
    },
    "ui": {
      "enabled": false
    }
  }
}
